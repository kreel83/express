{% extends 'layout.html.twig' %}


{% block body %}


    <h1>{{ test }}</h1>

    <div class="form-group">
        <input type="text" class="form-control" id="search" value="{{ search }}">
    </div>
    <div class="d-flex flex-wrap" id="lesLivres">
        {% for book in books %}
            {% if book.thumbnail != null %}
                <div class="card w-25"  data-id="{{ book.id }}">
                    <div class="card-body">
                        {{ book.title }}
                        <p>{{ book.thumbnail }}</p>
                        <img src="{{ book.thumbnail }}" alt="">
                    </div>
                </div>
            {% endif %}
        {% endfor %}

    </div>
    <div class="control d-block w-100 d-flex justify-content-between">
        <button class="btn btn-primary btnControl" data-sens="Previous" data-page="{{ pageActuelle }}">precedent</button>
        <button class="btn btn-primary btnControl" data-sens="Next" data-page="{{ pageActuelle }}">suivant</button>
    </div>
{% endblock %}